{% extends 'base.html.twig' %}

    {% block header %}
        {% include "_menu.html.twig" %}
    {% endblock %}

{% block body %}
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Tableau de bord</a></li>
            <li class="breadcrumb-item active" aria-current="page">Bibliothèque de traces</li>
        </ol>
    </nav>

    <div class="container traces">
        <h1>Bibliothèque de traces</h1>
<div class="row">
        <div class="accordion accordion-flush col-6" id="accordionFlushExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                        Filtrer par compétences
                    </button>
                </h2>
                <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne"
                     data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body row">
                        <div>
                            <h6>Compétences</h6>
                            <fieldset>
                                {% for competence in competences %}
                                    <div style="display: flex" class="form-check">
                                        <input type="checkbox" id="{{ competence.id }}" name="{{ competence.id }}"
                                               value="{{ competence.id }}" class="form-check-input" {{ stimulus_action('tracesFiltres', 'filtreCompetences') }}>
                                        <label for="{{ competence.id }}" style="margin-left: 10px" class="form-check-label">{{ competence.libelle }}</label><br>
                                    </div>
                                {% endfor %}
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion accordion-flush col-6" id="accordionFlushTwo">
            <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                        Filtrer par Types de traces
                    </button>
                </h2>
                <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo"
                     data-bs-parent="#accordionFlushTwo">
                    <div class="accordion-body row">
                        <div>
                            <h6>Types de trace</h6>
                            <fieldset>
                                {% for type in typesTraces %}
                                    <div style="display: flex" class="form-check">
                                        <input type="checkbox" id="{{ type.id }}" name="{{ type.id }}"
                                               value="{{ type.id }}"  class="form-check-input">
                                        <label for="{{ type.id }}" style="margin-left: 10px" class="form-check-label">{{ type.display }}</label><br>
                                    </div>
                                {% endfor %}
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

        <hr>
        <!-- Button trigger modal -->
        <a>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                <i class="fa-solid fa-circle-plus"></i> <br>
                Créer une trace
            </button>
        </a>
        <hr>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title" id="exampleModalLabel">Types de traces</h3>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <ul>
                            {% for trace in typesTraces %}
                                <li>
                                    <a href="{{ path('app_trace_new', {'id': constant('class', trace)}) }}"><i
                                                class="{{ constant('ICON', trace) }}"></i>{{ trace.display }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        {{ component('all_trace') }}

    </div>

{% endblock %}
