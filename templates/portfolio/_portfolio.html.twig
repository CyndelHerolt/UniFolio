<em class="portfolio-description">{{ portfolio.description }}</em>

{% for page in pages %}

    <div class="card portfolio-pages-min" data-page="{{ page.id }}" {{ stimulus_action('portfolioPage', 'showPage', 'click') }} style="padding: 0 25px">
        <div class="card-body">
            <h5 class="card-title">{{ page.intitule }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ page.description }}</h6>
            <hr>
            <ul class="portfolio-competences">
                {% set seen = [] %}
                {% for ordre in page.ordreTraces %}
                    {% for validation in ordre.trace.validations %}
                        {% if validation.apcNiveau.libelle not in seen %}
                            <li>
                                <div>
                    <span class="{{ validation.apcNiveau.competences.couleur }}">
                        {{ validation.apcNiveau.competences.nomCourt }}
                    </span> â€¢
                                    {{ validation.apcNiveau.libelle }}
                                </div>
                                {% if validation.etat == 0 %}
                                    <i class="fa-solid fa-hourglass-half" style="color: #4c008b"></i>
                                {% elseif validation.etat == 1 %}
                                    <i class="fa-solid fa-xmark" style="color: red"></i>
                                {% elseif validation.etat == 2 %}
                                    <i class="fa-solid fa-arrow-up" style="color: orange"></i>
                                {% elseif validation.etat == 3 %}
                                    <i class="fa-solid fa-check" style="color: limegreen"></i>
                                {% endif %}
                                {% set seen = seen|merge([validation.apcNiveau.libelle]) %}
                            </li>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            </ul>
        </div>
    </div>
{% endfor %}
</div>