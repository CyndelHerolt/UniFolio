{% extends 'base.html.twig' %}

{% block title %}Hello DashboardEnseignantController!{% endblock %}

    {% block header %}
        {% include "_menu.html.twig" %}
    {% endblock %}


{% block body %}
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
        </ol>
    </nav>
    <div class="container dashboard">
        <h1>Tableau de bord</h1>
        <section class="dashboard_infos_groupe">
            <div class="row">
                            <h2>Etudiants suivis</h2>
                <article class="col-lg-12 col-12">
                        <div class="col-lg-12 col-12">
                            <form class="d-flex">
                                <input class="form-control me-2" type="search" placeholder="Chercher un étudiant" aria-label="Search">
                                <button class="btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                            </form>
                        </div>

                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">B.U.T 1</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">B.U.T 2</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">B.U.T 3</button>
                        </li>
                    </ul>
{#                    TODO: Affichage dynamique des étudiants suivis + systeme de pages -> Live Components ? #}
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <table>
                                <thead>
                                <tr>
                                    <th>Nom de l'étudiant</th>
                                    <th>Groupe de TP</th>
                                    <th>Dernier retour pédagogique</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {{ include('components/etudiant_table.html.twig') }}
                                    {{ include('components/etudiant_table.html.twig') }}
                                    {{ include('components/etudiant_table.html.twig') }}
                                    {{ include('components/etudiant_table.html.twig') }}
                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            <table>
                                <thead>
                                <tr>
                                    <th>Nom de l'étudiant</th>
                                    <th>Groupe de TP</th>
                                    <th>Dernier retour pédagogique</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{ include('components/etudiant_table.html.twig') }}
                                {{ include('components/etudiant_table.html.twig') }}
                                {{ include('components/etudiant_table.html.twig') }}
                                {{ include('components/etudiant_table.html.twig') }}
                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                            <table>
                                <thead>
                                <tr>
                                    <th>Nom de l'étudiant</th>
                                    <th>Groupe de TP</th>
                                    <th>Dernier retour pédagogique</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{ include('components/etudiant_table.html.twig') }}
                                {{ include('components/etudiant_table.html.twig') }}
                                {{ include('components/etudiant_table.html.twig') }}
                                {{ include('components/etudiant_table.html.twig') }}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </article>
            </div>
        </section>
    </div>
    <footer>

        {% if admin == '/admin?_switch_user=_exit' %}

            <br>

            <a href="{{ admin }}">
                <button>back to admin</button>
            </a>

            <br>

        {% endif %}

    </footer>
{% endblock %}
