<div class="card global col-lg-3 col-sm-12">
    <div class="card-body">
        <h3 class="card-title">{{ this.portfolio.intitule }}</h3>
        {% if this.portfolio.visibilite %}
            <p>Public</p>
        {% else %}
            <p>Privé</p>
        {% endif %}

        <h6>Pages associées :</h6>
        {% for pages in this.portfolio.pages %}
            {{ component('page_card', {'id': pages.id}) }}
        {% endfor %}

        <a href="{{ path('app_portfolio_edit', {'id': this.portfolio.id}) }}">
            <button class="btn btn-primary">Modifier</button>
        </a>

        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop{{ this.portfolio.id }}">
            Supprimer
        </button>

        <a href="{{ path('app_add_to_portfolio', {'id': this.portfolio.id}) }}">
            <button class="btn btn-primary">Ajouter des pages</button>
        </a>

        <!-- Modal -->
        <div class="modal fade" id="staticBackdrop{{ this.portfolio.id }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Voulez-vous vraiment supprimer ce portfolio ?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Le portfolio {{ this.portfolio.intitule }} sera supprimé.</p>
                        <p style="color: red">Attention, cette action est irréversible !</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <a href="{{ path('app_portfolio_delete', {'id': this.portfolio.id}) }}">
                            <button class="btn btn-primary">Supprimer</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
