<div class="col-lg-6 col-sm-12">
    <div class="card">
        <div class="card-content">
            <div class="banner" style="background-image: url('{{ asset(this.portfolio.banniere) }}')"></div>
            <div class="card-header d-flex flex-column">
                <small>{{ this.portfolio.annee.libelle }}</small>
                <h5 class="card-title">{{ this.portfolio.intitule }}</h5>
                <ul class="card-infos-min">
                    <li><span>Créé le :&nbsp;</span> {{ this.portfolio.datecreation|date('d-m-y') }}</li>
                    <li>•</li>
                    <li><span>Modifié le :&nbsp;</span> {{ this.portfolio.datemodification|date('d-m-y') }}</li>
                    <li>•</li>
                    <li>{% if this.portfolio.visibilite %}
                            <span>Public</span>
                        {% else %}
                            <span>Privé</span>
                        {% endif %}</li>
                </ul>
            </div>
            <div class="card-body">
                <div class="btn_grp">
                    <a href="{{ path('app_portfolio_index', {'id': this.portfolio.id}) }}">
                        <button type="button" class="btn btn-secondary">
                            Voir plus
                        </button>
                    </a>
                    <a href="{{ path('app_portfolio_process_index', {'id': this.portfolio.id}) }}">
                        <button class="btn btn-primary">Modifier</button>
                    </a>

                    <!-- Button trigger modal -->
                    <a>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#staticBackdrop{{ this.portfolio.id }}">
                            Supprimer
                        </button>
                    </a>
                </div>
            </div>
        </div>

        <!-- Modal delete -->
        <div class="modal fade" id="staticBackdrop{{ this.portfolio.id }}" data-bs-backdrop="static"
             data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Voulez-vous vraiment supprimer ce portfolio
                            ?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Le portfolio {{ this.portfolio.intitule }} sera supprimé, mais les traces qu'il contient seront conservées dans votre bibliothèque.</p>
                        <p style="color: red">Attention, cette action est irréversible !</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <a href="{{ path('app_portfolio_delete', {'id': this.portfolio.id}) }}">
                            <button class="btn btn-primary">Supprimer</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>