<div{{ attributes }}>

    {% for annee in annees %}
        <button
                data-model="selectedAnnee[]"
                data-action="live#action"
                data-action-name="changeAnnee(id={{ annee.id }})"
        >{{ annee.libelle }}</button>
    {% endfor %}

    <div class="row">
        <div class="accordion accordion-flush col-4" id="accordionFlushExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#flush-collapseOne" aria-expanded="false"
                            aria-controls="flush-collapseOne">
                        Filtrer par compétences
                    </button>
                </h2>
                <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne"
                     data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body row">
                        <div>
                            <fieldset>

                                {% for cpt in niveaux %}
                                    <div style="display: flex" class="form-check">
                                        <input type="checkbox" id="{{ cpt.id }}"
                                               name="{{ cpt.id }}"
                                               data-model="selectedCompetences[]"
                                               data-action="live#action"
                                               data-action-name="changeCompetences"
                                               value="{{ cpt.id }}"
                                               class="form-check-input">
                                        <label for="{{ cpt.id }}" style="margin-left: 10px"
                                               class="form-check-label">{{ cpt.libelle }}</label><br>
                                    </div>
                                    <hr>
                                {% endfor %}

                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="accordion accordion-flush col-4" id="accordionFlushExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#flush-collapseTwo" aria-expanded="false"
                            aria-controls="flush-collapseTwo">
                        Filtrer par groupes
                    </button>
                </h2>
                <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo"
                     data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body row">
                        <div>
                            <fieldset>
                                {% for grp in groupes %}
                                    {% if grp.typeGroupe.type == 'TP' %}
                                        <div style="display: flex" class="form-check">
                                            <input type="checkbox" id="{{ grp.id }}"
                                                   name="{{ grp.id }}"
                                                   data-model="selectedGroupes[]"
                                                   data-action="live#action"
                                                   data-action-name="changeGroupes"
                                                   value="{{ grp.id }}"
                                                   class="form-check-input">
                                            <label for="{{ grp.id }}" style="margin-left: 10px"
                                                   class="form-check-label">{{ grp.libelle }}</label><br>
                                        </div>
                                        <hr>
                                    {% endif %}
                                {% endfor %}
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="accordion accordion-flush col-4" id="accordionFlushExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingThree">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#flush-collapseThree" aria-expanded="false"
                            aria-controls="flush-collapseThree">
                        Filtrer par étudiants
                    </button>
                </h2>
                <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingThree"
                     data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body row">
                        <div>
                            <fieldset>
                                {% for etudiant in etudiants %}
                                        <div style="display: flex" class="form-check">
                                            <input type="checkbox" id="{{ etudiant.id }}"
                                                   name="{{ etudiant.id }}"
                                                   data-model="selectedEtudiants[]"
                                                   data-action="live#action"
                                                   data-action-name="changeEtudiants"
                                                   value="{{ etudiant.id }}"
                                                   class="form-check-input">
                                            <label for="{{ etudiant.id }}" style="margin-left: 10px"
                                                   class="form-check-label">{{ etudiant.prenom }}</label><br>
                                        </div>
                                        <hr>
                                {% endfor %}
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
