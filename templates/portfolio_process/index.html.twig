{% extends 'base.html.twig' %}

{% block title %}Portfolio création{% endblock %}

    {% block header %}
        {% include "_menu.html.twig" %}
    {% endblock %}

{% block body %}

    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Tableau de bord</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_portfolio') }}">Bibliothèque de portfolios</a></li>
            {% if '/edit' in app.request.uri %}
                <li class="breadcrumb-item active" aria-current="page">Edition portfolio</li>
            {% elseif '/new' in app.request.uri %}
                <li class="breadcrumb-item active" aria-current="page">Nouveau portfolio</li>
            {% endif %}
        </ol>
    </nav>
    <div class="container">
        <section class="portfolio_form">
            <div class="row">
                <article class="col-lg-12 col-12">

                    <div {{ stimulus_controller('creation', { url: path('app_portfolio_process_step') }) }}>
                        <div {{ stimulus_controller('page', { url: path('app_portfolio_process_step') }) }}>

                            <div {{ stimulus_target('creation', 'stepZone') }}{{ stimulus_target('page', 'stepZone') }}>


                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </section>
    </div>

{% endblock %}
